// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: a user can add multiple standup items for different projects they are on
// i.e: you should add a field that will accommodate for the different project's they 
// are on
model Standup {
  id              String           @id @default(uuid())
  createdAt       DateTime         @default(now()) @db.Date
  accomplishments Accomplishment[]
  blockers        Blocker[]
  plansToday      PlanToday[]
  plansTomorrow   PlanTomorrow[]
}

model Accomplishment {
  id          String   @id @default(uuid())
  title       String
  description String?
  Standup     Standup? @relation(fields: [standupId], references: [id], onDelete: Cascade)
  standupId   String?
}

model Blocker {
  id          String  @id @default(uuid())
  title       String
  description String?
  Standup     Standup @relation(fields: [standupId], references: [id], onDelete: Cascade)
  standupId   String
}

model PlanToday {
  id          String   @id @default(uuid())
  title       String
  description String?
  Standup     Standup? @relation(fields: [standupId], references: [id], onDelete: Cascade)
  standupId   String?
}

model PlanTomorrow {
  id          String   @id @default(uuid())
  title       String
  description String?
  Standup     Standup? @relation(fields: [standupId], references: [id], onDelete: Cascade)
  standupId   String?
}
